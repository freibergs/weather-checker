# Weather monitoring configuration
# Wind gust threshold in m/s - when to trigger wind warnings
WIND_GUST_THRESHOLD=16

# Precipitation threshold in mm - when to trigger precipitation warnings  
PRECIPITATION_THRESHOLD=1.5

# Weather monitoring location (coordinates)
# Default: Riga, Latvia (56.95, 24.12)
LATITUDE=56.95
LONGITUDE=24.12

# Precipitation notifications
# Comma-separated list of Discord user IDs to receive precipitation warnings
PRECIPITATION_USER_IDS=1234567890123456789,9876543210987654321

# How many days ahead to check for precipitation warnings
PRECIPITATION_DAYS_AHEAD=2

# Wind gust notifications  
# Comma-separated list of Discord user IDs to receive wind warnings
WIND_USER_IDS=1234567890123456789,9876543210987654321

# How many days ahead to check for wind warnings
WIND_DAYS_AHEAD=8

# Discord API configuration
# Bearer token for Discord API authentication
BEARER_TOKEN=your-bearer-token-here

# Endpoint URL for sending Discord messages
ENDPOINT_URL=https://your-discord-api-endpoint.com/api/message